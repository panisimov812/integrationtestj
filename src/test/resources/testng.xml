<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="UI Tests" verbose="1" parallel="false">
    <!-- Аннотация @Tag("ui") на тестах через TagAnnotationTransformer подставляется в groups. -->
    <listeners>
        <listener class-name="base.TagAnnotationTransformer"/>
        <listener class-name="base.RetryAnnotationTransformer"/>
        <listener class-name="base.RetryListener"/>
    </listeners>
    <!-- Группа ui задаётся через @Tag("ui") и TagAnnotationTransformer; без <groups> все @Test в перечисленных классах выполняются -->
    <test name="Yandex - Search">
        <classes>
            <class name="tests.YandexSearchTest"/>
        </classes>
    </test>
    <test name="Google - Search Bar">
        <classes>
            <class name="tests.GoogleSearchTest"/>
        </classes>
    </test>
    <test name="Google - Search (клавиатура)">
        <classes>
            <class name="tests.GoogleSearchKeyboardTest"/>
        </classes>
    </test>
    <test name="The Internet - Login">
        <classes>
            <class name="tests.InternetLoginTest"/>
        </classes>
    </test>
    <test name="The Internet - Basic Auth">
        <classes>
            <class name="tests.BasicAuthTest"/>
        </classes>
    </test>
</suite>

